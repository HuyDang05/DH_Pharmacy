extends ../../layouts/default.pug
include ../../mixins/box-head.pug


block main 
  .container.my-3   

    include ../../partials/list-btn-users.pug

    .row 
      .col-12 
        +box-head("Danh sách người dùng")

    
    .row 
      .col-6 
        div(class="box-user")
          div(class="inner-avatar")
            img(
              src=(user.avatar ? user.avatar : "/images/user.webp")
              alt="user.fullName"
            )
          div(class="inner-info")
            div(class="inner-name") #{user.fullName} 
            div(class="inner-buttons")
              button(
                class="btn btn-sm btn-primary nr-1"
                button-add-friend=user.id
              ) Kết bạn
              button(
                class="btn btn-sm btn-secondary nr-1"
                button-cancel-friend=user.id
              ) Hủy
